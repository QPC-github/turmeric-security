    <operation name="createPolicy">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="createExternalSubjectReferences">
        	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="createResources">
        	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="createSubjectGroups">
        	 <authentication-method>BasicAuth</authentication-method>
