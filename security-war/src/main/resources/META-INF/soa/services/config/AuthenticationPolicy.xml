    <operation name="enablePolicy">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="findExternalSubjects">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="findPolicies">
