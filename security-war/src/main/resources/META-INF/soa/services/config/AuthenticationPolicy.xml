    </operation>
    <operation name="getEntityHistory">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="getMetaData">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="getOperations">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="getResources">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="updatePolicy">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="updateResources">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="updateSubjectGroups">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
    <operation name="validatePolicy">
    	 <authentication-method>BasicAuth</authentication-method>
    </operation>
